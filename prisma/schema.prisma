// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email              String        @unique
  name               String
  username           String
  is_male            Boolean
  age                Int
  password           String

  @@map("users")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name               String
  jumlah             BigInt
  penjual            String
  catatan            String
  bukti              String
  jenis              String        

  @@map("transactions")
}
